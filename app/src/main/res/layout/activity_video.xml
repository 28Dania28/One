<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context=".VideoActivity"
    android:background="@drawable/c_r_15_black">


    <VideoView
        android:id="@+id/story_vv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"/>

    <RelativeLayout
        android:id="@+id/left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/seperator"/>

    <RelativeLayout
        android:id="@+id/seperator"
        android:layout_width="1dp"
        android:layout_centerInParent="true"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/right"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/seperator"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/btm_rl"
        android:layout_alignParentRight="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/categories"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/c_r_translucent_white20_7"
            android:text="C"
            android:shadowColor="#55000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="@color/colorManipura"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/tags"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:background="@drawable/c_r_translucent_white20_7"
            android:elevation="10dp"
            android:src="@drawable/vector_person_tag"/>

        <ImageView
            android:id="@+id/location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:padding="7dp"
            android:background="@drawable/c_r_translucent_white20_7"
            android:elevation="10dp"
            android:src="@drawable/vector_location_mark"/>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/btm_rl"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="2dp"
        android:layout_alignParentBottom="true">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:background="@drawable/user"
            android:elevation="10dp"
            fresco:roundAsCircle="true"/>


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 h "
            android:textColor="@color/iWhite"
            android:textSize="12sp"
            android:shadowColor="#55000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textStyle="bold"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:elevation="10dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_direction"
            android:elevation="20dp"
            android:alpha="0.6"
            android:rotation="180"
            android:layout_margin="20dp"/>

        <ImageView
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/vector_pause"
            android:elevation="10dp"
            android:alpha="0.6"/>

        <ImageView
            android:id="@+id/forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/vector_direction"
            android:layout_margin="20dp"
            android:alpha="0.6"
            android:elevation="20dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</RelativeLayout>

