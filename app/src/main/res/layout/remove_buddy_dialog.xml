<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:background="@drawable/c_r_upper_15">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/dialog_dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:src="@color/root"/>

    <TextView
        android:id="@+id/dialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dialog_dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/txt1"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/remove_buddy_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/dialog_name"
        android:text="Remove Buddy"
        android:textAllCaps="false"
        android:padding="10dp"
        android:layout_margin="30dp"
        android:textStyle="bold"
        android:textColor="@color/colorMuladhara"
        android:background="@drawable/c_r_root_10"/>


</RelativeLayout>