<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="5dp"
        android:background="@drawable/chat_item_left_back">

        <ImageView
            android:id="@+id/story_iv"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:elevation="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:id="@+id/reacted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reacted :  "
            android:layout_toRightOf="@+id/story_iv"
            android:layout_above="@+id/time"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="5dp"/>

        <com.vanniktech.emoji.EmojiTextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/iBlue"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/reacted"
            android:layout_above="@+id/time"
            android:textStyle="bold"/>


        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/story_iv"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:textColor="@color/txt2"
            android:textSize="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

</RelativeLayout>