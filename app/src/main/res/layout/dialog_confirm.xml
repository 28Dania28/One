<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/c_r_upper_20"
    android:padding="20dp"
    android:elevation="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discard?"
        android:textSize="20sp"
        android:textColor="@color/txt1"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="If you go back now, you will lose the selection."
        android:layout_marginTop="15dp"
        android:textAlignment="center"
        android:textColor="@color/txt2"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/dc_discard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/c_r_root_10"
        android:text="Discard"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorMuladhara"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/dc_keep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="Keep"
        android:textColor="@color/txt1"
        android:layout_marginTop="5dp"/>

</LinearLayout>